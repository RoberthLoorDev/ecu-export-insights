---
import CardResumeComponent from "../components/ui/CardResumeComponent.astro";
import { totalFOB, totalWeight, getTotalUniqueItems, getMainExportCategory } from "../data/resumeData";

const { countActualMonthData, percentage } = totalFOB("03");
const { totalWeightActualMonth, percentageWight } = totalWeight("03");
const { percentageUniqueItems, uniqueItemsActualMonth } = getTotalUniqueItems("03");
const { mostExportedCategoryActualMonth, mostExportedCategoryPastMonth } = getMainExportCategory("03");
---

<!-- cards -->
<seciton class="cards-resume-container flex max-w-[calc(100vw-30px)] gap-4 overflow-x-auto pb-2 md:max-w-[calc(100vw-150px)]">
     <CardResumeComponent
          title="Comparativo de Exportaciones: Febrero vs. Marzo"
          quantity={countActualMonthData}
          percentage={Number(percentage.toFixed(2))}
          unit="Exportaciones"
     />

     <CardResumeComponent
          title="Peso total exportado (TM) en el período: Febrero vs. Marzo"
          quantity={Number(totalWeightActualMonth.toFixed(2))}
          percentage={Number(percentageWight.toFixed(2))}
          unit="Toneladas"
     />

     <CardResumeComponent
          title="Número de productos únicos exportados: Febrero vs. Marzo"
          quantity={uniqueItemsActualMonth}
          percentage={Number(percentageUniqueItems.toFixed(2))}
          unit="Productos únicos"
     />

     <CardResumeComponent
          title="Categoría principal de exportación: Febrero vs. Marzo"
          quantity={mostExportedCategoryActualMonth || "Sin categoría"}
          percentage={mostExportedCategoryPastMonth || "Sin categoría"}
     />
</seciton>

<style>
     .cards-resume-container::-webkit-scrollbar {
          height: 5px;
     }

     .cards-resume-container::-webkit-scrollbar-track {
          background: #f1f1f1;
          border-radius: 6px;
     }

     .cards-resume-container::-webkit-scrollbar-thumb {
          background: #9593a9;
          border-radius: 8px;
     }
</style>
