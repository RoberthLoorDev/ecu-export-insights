     <canvas id="id_montlhyPieChart" class="max-h-[210px]"> </canvas>
</div>

<script>
     import { Chart } from "chart.js/auto";
     import { getTradicionalData } from "../../data/PieTraditionalTrendsGraphData";

     const { dataNoTraditional: countDataTraditional, dataTraditional: countDataNoTraditional } = getTradicionalData("03");

     document.addEventListener("DOMContentLoaded", () => {
          const ctx = document.getElementById("id_montlhyPieChart") as HTMLCanvasElement;
          const chart = new Chart(ctx, {
               type: "pie",
               data: {
                    labels: ["Tradicionales", "No Tradicionales"],
                    datasets: [
                         {
                              label: "Exportaciones: ",
                              data: [countDataTraditional, countDataNoTraditional],
                              backgroundColor: ["rgb(255, 99, 132)", "rgb(54, 162, 235)", "rgb(255, 205, 86)"],
                              hoverOffset: 4,
                         },
                    ],
               },
          });
     });
</script>
